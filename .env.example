# ============================================
# LiveChat-AI Environment Configuration
# Copy this file as .env and fill in values
# ============================================

# Server
PORT=3310
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27018/livechat-ai

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=live_knowledge

# Google Gemini  ⚠️ BẮT BUỘC — lấy từ https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_EMBEDDING_MODEL=text-embedding-004
GEMINI_CHAT_MODEL=gemini-2.5-flash

# Redis (for BullMQ)
REDIS_HOST=redis
REDIS_PORT=6379

# Authentication — Key để KLive-BE gọi KLive-AI (tự đặt, giống 2 bên)
API_KEY=your-secret-api-key-here

# CORS - Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
